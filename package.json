{
  "private": true,
  "name": "playerx",
  "version": "1.0.0-beta.1",
  "description": "Playerx",
  "homepage": "https://github.com/luwes/playerx#readme",
  "bugs": {
    "url": "https://github.com/luwes/playerx/issues"
  },
  "repository": "luwes/playerx",
  "license": "MIT",
  "author": "Wesley Luyten <me@wesleyluyten.com> (https://wesleyluyten.com)",
  "main": "dist/playerx.umd.js",
  "module": "dist/playerx.js",
  "types": "src/playerx/index.d.ts",
  "files": [
    "src",
    "dist"
  ],
  "workspaces": [
    "site"
  ],
  "scripts": {
    "build": "run-s build:*",
    "build:js": "rollup -c --silent",
    "build:demo": "yarn workspace site build",
    "dev": "cross-env NODE_ENV=dev run-p dev:*",
    "dev:cdn": "http-server ./dist --cors --brotli",
    "dev:demo": "yarn workspace site dev",
    "dev:js": "rollup -wc --silent",
    "serve": "yarn workspace site serve",
    "lint": "eslint src/*/",
    "test": "yarn lint",
    "release": "PRIVATE=false yarn update-private && yarn publish",
    "prepublishOnly": "yarn lint && yarn build:js",
    "postpublish": "PRIVATE=true yarn update-private",
    "update-private": "node -e \"let pkg=require('./package.json'); pkg.private = $PRIVATE; require('fs').writeFileSync('package.json', JSON.stringify(pkg, null, 2));\""
  },
  "dependencies": {
    "super-media-element": "^0.3.0"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.9",
    "@rollup/plugin-commonjs": "^22.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-virtual": "^2.1.0",
    "@webcomponents/custom-elements": "^1.5.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "eslint": "^8.20.0",
    "eslint-plugin-import": "^2.26.0",
    "fs-extra": "^10.1.0",
    "http-server": "^14.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "rollup": "^2.77.0",
    "rollup-plugin-istanbul": "^3.0.0",
    "rollup-plugin-size": "^0.2.2",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-terser": "^7.0.2",
    "schema-dts": "^1.1.0",
    "typescript": "^4.7.4"
  },
  "prettier": {
    "tabWidth": 2,
    "singleQuote": true,
    "semi": true
  },
  "eslintConfig": {
    "globals": {
      "globalThis": "writable"
    },
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:import/warnings"
    ],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "rules": {
      "no-shadow": "error"
    },
    "ignorePatterns": [
      "site/src/js/ga.js"
    ]
  }
}
