{
  "name": "playerx",
  "version": "0.8.1",
  "description": "Playerx",
  "keywords": [],
  "homepage": "https://github.com/playerxo/playerx#readme",
  "bugs": {
    "url": "https://github.com/playerxo/playerx/issues"
  },
  "repository": "playerxo/playerx",
  "license": "SEE LICENSE IN LICENSE",
  "author": "Wesley Luyten <me@wesleyluyten.com> (https://wesleyluyten.com)",
  "main": "dist/playerx.umd.js",
  "module": "dist/playerx.js",
  "types": "src/playerx/index.d.ts",
  "files": [
    "src",
    "dist"
  ],
  "workspaces": {
    "packages": [
      "site",
      "bench"
    ],
    "nohoist": [
      "**/esm/**"
    ]
  },
  "scripts": {
    "build": "run-s build:*",
    "build:js": "rollup -c --silent",
    "build:demo": "yarn workspace site build",
    "coverage": "codecov",
    "dev": "cross-env NODE_ENV=dev run-p dev:*",
    "dev:cdn": "http-server ./dist --cors --brotli",
    "dev:demo": "yarn workspace site dev",
    "dev:js": "rollup -wc --silent",
    "serve": "yarn workspace site serve",
    "lint": "eslint src/*/",
    "test": "cross-env COVERAGE=true karma start",
    "docs": "run-p docs:*",
    "docs:playerx": "jsdoc2md src/playerx/index.js",
    "bench": "yarn workspace bench start"
  },
  "prettier": {
    "tabWidth": 2,
    "singleQuote": true,
    "semi": true
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:import/warnings"
    ],
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "ecmaVersion": 2019,
      "sourceType": "module"
    },
    "rules": {
      "no-shadow": "error"
    },
    "ignorePatterns": [
      "site/src/js/ga.js"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/eslint-parser": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@rollup/plugin-alias": "^3.1.5",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-replace": "^3.0.0",
    "@rollup/plugin-virtual": "^2.0.3",
    "@types/node": "^16.6.1",
    "@webcomponents/custom-elements": "^1.5.0",
    "ansi-colors": "^4.1.1",
    "babel-plugin-transform-async-to-promises": "^0.8.15",
    "codecov": "3.8.0",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-import": "^2.24.0",
    "faucet": "^0.0.1",
    "fs-extra": "^10.0.0",
    "http-server": "^13.0.0",
    "karma": "^6.3.4",
    "karma-chrome-launcher": "^3.0.0",
    "karma-coverage": "^2.0.3",
    "karma-rollup-preprocessor": "^7.0.3",
    "karma-sauce-launcher": "^4.3.6",
    "karma-tap": "^4.2.0",
    "karma-tap-pretty-reporter": "^4.2.0",
    "lodash-es": "^4.17.21",
    "minimist": "^1.2.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "rollup": "^2.56.2",
    "rollup-plugin-istanbul": "^2.0.1",
    "rollup-plugin-size": "^0.2.2",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-terser": "^7.0.2",
    "tap-spec": "^5.0.0",
    "tape-browser": "^4.13.0",
    "typescript": "^4.3.5",
    "ua-parser-js": "^0.7.28"
  },
  "dependencies": {
    "mux-embed": "4.2.3"
  }
}
